{
  "name": "Buff Currency Converter",
  "version": "1.0.0",
  "description": "This is an extension to convert price (yuanes) to usd / euro",
  "manifest_version": 3,
  "author": "jorgeju4rez",
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "Buff Currency Converter"
  },
  "content_scripts": [
    {
      "matches": [
        "https://buff.163.com/*"
      ],
      "css": [
        "styles/style.css"
      ],
      "js": [
        "js/script.js"
      ]
    }
  ]
}